<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_small"
    android:background="@android:color/white"
    android:padding="@dimen/padding_small"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hey.forecast.main.MainActivity">
    <!--app:cardElevation="@dimen/cardview_default_elevation"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<EditText-->
        <!--android:id="@+id/edit_text_query"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/text_view_location"-->
        <!--android:layout_margin="@dimen/margin_small"-->
        <!--android:background="@null"-->
        <!--android:gravity="center"-->
        <!--android:hint="@string/query_hint" />-->

        <LinearLayout
            android:id="@+id/linear_layout_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="@dimen/padding_small">

            <ImageView
                android:id="@+id/image_view_weather"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@drawable/test" />

            <TextView
                android:id="@+id/text_view_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_small"
                android:textSize="64sp"
                tools:text="18℃" />

            <TextView
                android:id="@+id/text_view_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/margin_small"
                android:textSize="32sp"
                tools:text="晴天" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout_temperature"
            android:padding="@dimen/padding_small"
            android:paddingEnd="72dp"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recycler_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_humidity"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_margin="@dimen/margin_small"
                android:drawableStart="@drawable/ic_umberella"
                tools:text="69%" />

            <TextView
                android:id="@+id/text_view_wind_degree"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_margin="@dimen/margin_small"
                tools:text="微风" />

        </LinearLayout>


        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seek_bar"
            style="@android:style/Widget.Material.Light.ProgressBar.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:thumb="@null"
            android:visibility="invisible"
            tools:ignore="NewApi" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@android:drawable/ic_dialog_email" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
