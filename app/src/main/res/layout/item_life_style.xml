<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_fewer"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingTop="@dimen/padding_fewer">

        <ImageView
            android:id="@+id/image_view_life_style"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_life_style_comforts" />

        <TextView
            android:id="@+id/text_view_life_style_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="舒适指数" />

        <TextView
            android:id="@+id/text_view_life_style_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="舒适" />
    </LinearLayout>
</android.support.v7.widget.CardView>
